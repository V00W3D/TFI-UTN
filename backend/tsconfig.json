{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "bundler",

    "types": ["bun", "node"],

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@IAM/*": ["src/IAM/*"],
      "@POS/*": ["src/POS/*"],
      "@ADMIN/*": ["src/ADMIN/*"],
      "@CORE/*": ["src/CORE/*"],
      "@env": ["src/env.ts"],
      "@pg": ["src/pgsql.ts"]
    }
  },
  "include": ["src"]
}
